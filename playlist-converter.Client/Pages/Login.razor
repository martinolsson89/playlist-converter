@page "/login"
@using PlaylistConverter.Client.Services
@inject NavigationManager Nav
@inject PlaylistConverterService Api

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-container">
                <svg class="logo-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2C13.1 2 14 2.9 14 4V6H16C17.1 6 18 6.9 18 8V14C18 15.1 17.1 16 16 16H14V18C14 19.1 13.1 20 12 20C10.9 20 10 19.1 10 18V16H8C6.9 16 6 15.1 6 14V8C6 6.9 6.9 6 8 6H10V4C10 2.9 10.9 2 12 2Z" fill="currentColor" />
                </svg>
            </div>
            <h1 class="login-title">Welcome to Playlist Converter</h1>
            <p class="login-subtitle">Sign in to start converting your playlists</p>
        </div>

        <div class="login-content">
            @if (busy)
            {
                <div class="loading-state">
                    <div class="loading-spinner"></div>
                    <p class="loading-text">Redirecting to Google...</p>
                </div>
            }
            else
            {
                <button class="login-btn @(busy ? "disabled" : "")" @onclick="LoginWithYoutube" disabled="@busy">
                    <svg class="btn-icon youtube-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M23.498 6.186a2.999 2.999 0 0 0-2.109-2.122C19.505 3.546 12 3.546 12 3.546s-7.505 0-9.389.518A2.999 2.999 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a2.999 2.999 0 0 0 2.109 2.122C4.495 20.454 12 20.454 12 20.454s7.505 0 9.389-.518a2.999 2.999 0 0 0 2.109-2.122C24 15.93 24 12 24 12s0-3.93-.502-5.814z" fill="#FF0000" />
                        <path d="M9.546 15.569V8.431L15.818 12l-6.272 3.569z" fill="#FFFFFF" />
                    </svg>
                    <span class="btn-text">Sign in with YouTube</span>
                    <svg class="btn-icon google-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4" />
                        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853" />
                        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05" />
                        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335" />
                    </svg>
                </button>
            }

            @if (!string.IsNullOrEmpty(error))
            {
                <div class="error-alert">
                    <svg class="error-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" fill="currentColor" />
                    </svg>
                    <span>@error</span>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool busy;
    private string? error;

    private async Task LoginWithYoutube()
    {
        try
        {
            busy = true;
            error = null;
            // After auth & token exchange API will redirect to /auth-callback
            var callback = $"{Nav.BaseUri}auth-callback";
            var authUrl = await Api.GetYoutubeAuthUrlAsync(callback);
            Nav.NavigateTo(authUrl, forceLoad: true);
        }
        catch (Exception ex)
        {
            error = ex.Message;
            busy = false;
        }
    }
}